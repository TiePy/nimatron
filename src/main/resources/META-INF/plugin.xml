<idea-plugin>
    <id>com.tiepy.nimatron</id>
    <name>Nimatron</name>
    <vendor email="support@tiepy.com" url="https://www.tiepy.com">TiePy</vendor>

    <description><![CDATA[
    Syntax highlighting and more for the Nim programming language.
    ]]></description>

    <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <fileType name="Nim File" implementationClass="com.tiepy.nimatron.NimFileType"
                  fieldName="INSTANCE" language="Nim" extensions="nim"/>
        <lang.parserDefinition language="Nim"
                               implementationClass="com.tiepy.nimatron.NimParserDefinition"/>
        <lang.syntaxHighlighterFactory language="Nim"
                                       implementationClass="com.tiepy.nimatron.NimSyntaxHighlighterFactory"/>
        <colorSettingsPage implementation="com.tiepy.nimatron.NimColorSettingsPage"/>
    </extensions>

    <actions>
        <!-- Add your actions here -->
    </actions>
</idea-plugin>