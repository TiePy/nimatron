<idea-plugin>
    <id>com.tiepy.nimatron</id>
    <name>Nimatron</name>
    <vendor email="nimatron-support@tiepy.com" url="https://tiepy.com">TiePy Ltd</vendor>
    <description><![CDATA[
    Syntax-highlighting for the Nim programming language. More to come.
    ]]></description>

    <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <fileType
                name="Nim File"
                implementationClass="com.tiepy.nimatron.NimFileType"
                fieldName="INSTANCE"
                language="Nim"
                extensions="nim"/>
        <lang.parserDefinition
                language="Nim"
                implementationClass="com.tiepy.nimatron.parser.NimParserDefinition"/>
        <lang.syntaxHighlighterFactory
                language="Nim"
                implementationClass="com.tiepy.nimatron.syntax.NimSyntaxHighlighterFactory"/>
        <colorSettingsPage
                implementation="com.tiepy.nimatron.NimColorSettingsPage"/>
        <lang.commenter
                language="Nim"
                implementationClass="com.tiepy.nimatron.NimCommenter"/>
        <lang.psiStructureViewFactory
                language="Nim"
                implementationClass="com.tiepy.nimatron.structureView.NimStructureViewFactory"/>
    </extensions>

    <actions>
        <action
                id="NewNimFile"
                class="com.tiepy.nimatron.actions.NimCreateFileAction"
                text="Nim File"
                description="Create new Nim file">
            <add-to-group
                    group-id="NewGroup"
                    anchor="before"
                    relative-to-action="NewFromTemplate"/>
        </action>
    </actions>
</idea-plugin>